{
  "name": "capstone",
  "version": "1.0.0",
  "bin": {
    "antigravity": "./gravity.js"
  },
  "description": "TaskForge - Shape ideas into results",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "concurrently \"npm run server:start\" \"npm run client:start\"",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "client:dev": "cd client && npm run dev -- --host 0.0.0.0",
    "client:build": "cd client && npm run build",
    "client:start": "cd client && npm run build && npm run preview",
    "prisma:generate": "cd server && npm run prisma:generate",
    "prisma:push": "cd server && npm run prisma:push",
    "test": "echo \"Error: no test specified\" && exit 1",
    "pretty": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "axios": "^1.13.5",
    "concurrently": "^9.2.1",
    "lucide-react": "^0.561.0",
    "prisma": "7.1.0",
    "react-quill-new": "^3.8.3"
  },
  "devDependencies": {
    "prettier": "^3.8.1"
  }
}
